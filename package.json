{
  "name": "pi-issue-runner",
  "version": "0.1.0",
  "description": "GitHub Issue-driven parallel task runner with Git worktree and tmux integration for pi-mono",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "pi-run": "./bin/pi-run"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir ./dist --target node",
    "build:binary": "bun build src/cli.ts --compile --outfile pi-run",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "keywords": [
    "pi-mono",
    "github",
    "issue",
    "worktree",
    "tmux",
    "parallel",
    "task-runner"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
